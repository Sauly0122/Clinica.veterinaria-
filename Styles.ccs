/* Ajustes generales */
body {
    font-family: Arial, sans-serif;
}

.navbar {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Animación para el número de contacto */
.contact-phone {
    font-size: 1.5em;
    color: #007bff;
    transition: transform 0.3s ease;
}

.contact-phone:hover {
    transform: scale(1.1);
}

/* Footer */
footer a {
    color: #fff;
    font-size: 1.5em;
    margin: 0 10px;
    transition: color 0.3s;
}

footer a:hover {
    color: #007bff;
}
